#%Module1.0#####################################################################
##
## Blendics MetaACE
## By Leandro Heck
##

# Local variables
set COMPANY "blendics"
set MODULE "metaace"
set VERSION "2.13"
set BASE "/soft64/util/${COMPANY}/${MODULE}/${VERSION}"

# Helps
module-whatis "Loads MetaACE metastability analisys tool"

# MetaACE variables
set METAACE ${BASE}
set RUNTIME_PATH ${BASE}/runtime/v84

# Matlab variables (remove warning)
prepend-path XAPPLRESDIR ${BASE}/runtime/v84/X11/app-defaults/

# Binaries
prepend-path PATH ${BASE}/bin

# Libraries
prepend-path LD_LIBRARY_PATH ${RUNTIME_PATH}/sys/java/jre/glnxa64/jre/lib/amd64/server
prepend-path LD_LIBRARY_PATH ${RUNTIME_PATH}/sys/os/glnxa64
prepend-path LD_LIBRARY_PATH ${RUNTIME_PATH}/bin/glnxa64
prepend-path LD_LIBRARY_PATH ${BASE}/bin
prepend-path LD_LIBRARY_PATH ${RUNTIME_PATH}/runtime/glnxa64
prepend-path LD_LIBRARY_PATH ${RUNTIME_PATH}/sys/opengl/lib/glnxa64/

# Manual
prepend-path MANPATH ${BASE}/man

# Simple user information
if { [ module-info mode load ] } {
	module load hspice
	puts stderr "\t${MODULE} ${VERSION} module was loaded\n"
}

if { [ module-info mode remove ] } {
	puts stderr "\n\t${MODULE} ${VERSION} module was removed\n"
}

