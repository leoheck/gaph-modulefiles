#%Module1.0#####################################################################

## SystemC-TLM modulefile
## Leandro Heck

# Local variables
set MODULE "TLM"
set VERSION "2.0.1"
set BASE "/soft64/util/accelera/systemc/${MODULE}-${VERSION}"

# Helps
module-whatis "Loads TLM (Transaction Level Modelling for SystemC) from Open SystemC Initiative (OSCI)"

# Includes
prepend-path C_INCLUDE_PATH "${BASE}/include"
prepend-path CPLUS_INCLUDE_PATH "${BASE}/include"


# Simple user information
if { [ module-info mode load ] } {
    puts stderr "\n\t${MODULE} ${VERSION} module was loaded\n"
}

if { [ module-info mode remove ] } {
    puts stderr "\n\t${MODULE} ${VERSION} module was removed\n"
}

