#%Module1.0

## Hemps Generator
## Leandro Heck

# Local variables
set MODULE "hemps"
set VERSION "7.2"
set BASE "/soft64/sesd/hemps/${VERSION}"

# Helps
module-whatis "Loads Hemps Module. To run call hemps"

# Required Variables
setenv HEMPS_PATH "${BASE}"

# Binaries PATH
prepend-path PATH "${BASE}/scripts"
prepend-path PATH "${BASE}/bin"

# Load feedback
if { [ module-info mode load ] } {
    # Required modules
    module load systemc
    module load ise
    module load questa
    module load mips-elf/4.1.1-hemps
    puts stderr "\n\t${MODULE} ${VERSION} module was loaded\n"
    puts stderr "\n\tFor more information: hemps --help\n"
}

# Remove feedback
if { [ module-info mode remove ] } {
    # Required modules
    module rm systemc
    module rm ise
    module rm questa
    module rm mips-elf/4.1.1-hemps
    puts stderr "\n\t${MODULE} ${VERSION} module was removed\n"
}

